cmake_minimum_required(VERSION 3.1)
project(TT VERSION 0.1 LANGUAGES CXX)
set(EXEC TT)
find_package(OpenCV REQUIRED)
include_directories(${OpenCV_INCLUDE_DIRS})
include_directories(include)
file(GLOB SOURCES src/*.cpp)
add_executable(${EXEC} ${SOURCES})
add_executable(Captura pruebas/Captura.cpp src/cam.cpp)
add_executable(Carril pruebas/Carril.cpp src/cam.cpp)
add_executable(Enviar pruebas/Enviar.cpp src/carro.cpp)
add_executable(Grabar pruebas/Grabar.cpp src/cam.cpp)
add_executable(PID pruebas/PID.cpp src/control.cpp src/cam.cpp src/carro.cpp)
add_executable(Giro pruebas/Giro.cpp src/cam.cpp src/carro.cpp)
add_executable(Prof pruebas/Prof.cpp src/cam.cpp)
#add_executable(Sema pruebas/Sema.cpp src/cam.cpp)
add_executable(Senales pruebas/Senales.cpp src/cam.cpp)
add_executable(Distancia pruebas/Distancia.cpp src/cam.cpp)
target_link_libraries(${EXEC} ${OpenCV_LIBS})
target_link_libraries(Captura ${OpenCV_LIBS})
target_link_libraries(Carril ${OpenCV_LIBS})
target_link_libraries(Enviar ${OpenCV_LIBS})
target_link_libraries(Grabar ${OpenCV_LIBS})
target_link_libraries(PID ${OpenCV_LIBS})
#target_link_libraries(Sema ${OpenCV_LIBS})
target_link_libraries(Senales ${OpenCV_LIBS})
target_link_libraries(Distancia ${OpenCV_LIBS})
target_link_libraries(Giro ${OpenCV_LIBS})
target_link_libraries(Prof ${OpenCV_LIBS})

